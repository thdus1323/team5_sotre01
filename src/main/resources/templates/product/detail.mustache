{{> layout/header}}
<div class="d-flex justify-content-center" style="margin-top: 100px; margin-bottom: 100px;">
    {{#product}}
        <div class="p-3 m-3" style="width: 300px;">
            <div class="mb-3 mt-3">
                상 품 명 : <input name="name" type="text" class="form-control" value="{{name}}" readonly>
            </div>
            <div class="mb-3 mt-3">
                상품가격 : <input name="price" type="number" class="form-control" value="{{price}}" readonly>
            </div>
            <div class="mb-3 mt-3">
                상품수량 : <input name="qty" type="number" class="form-control" value="{{qty}}" readonly>
            </div>
            <div class="d-flex justify-content-center">
                <span><a href="/product/{{id}}/update-form" class="btn btn-primary mt-3">수정하러가기</a></span>
                <span><form action="/product/{{id}}/delete" method="post">
                    <button class="btn btn-danger mt-3">삭제하기</button>
                </form>
                </span>
            </div>
        </div>


    {{/product}}

</div>
{{> layout/footer}}